<h1>All pets</h1>

<%= button_to "Start an Adoption Application", "/applications/new", method: :get %><br>

<table style='width:100%'>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Breed</th>
    <th>Adoptable</th>
    <th>Shelter</th>
    <th>Edit Pet</th>
    <th>Delete Pet</th>
  </tr>
      <% @pets.each do |pet| %>
    <tr>
        <td><%= pet.name %></td>
        <td><%= pet.age %></td>
        <td><%= pet.breed %></td>
        <td> <% if pet.adoptable == true %>
        <%= 'Yes' %>
        <% else %>
        <%= 'No' %>
        <% end %></td>
        <td><%= pet.shelter_name %>!</td>
        <td><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %></td>
        <td><%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %></td>
    </tr>
  <% end %>
</table><br>

<%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label "Search Pets By Name" %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %><br>

