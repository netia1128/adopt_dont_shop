<h1>All Shelters</h1>

<%= link_to "Sort by number of pets", "/shelters?sort=pet_count" %><br><br>

<%= form_with url: "/shelters", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %><br>


<table id='shelters' style='width:100%'>
  <tr>
    <th>Name</th>
    <th>Created At</th>
    <th>Edit Shelter</th>
    <th>Delete Shelter</th>
  </tr>
  <% @shelters.each do |shelter| %>
    <tr>
      <td class="name"><%= shelter.name %></td>
      <td><p><%= shelter.created_at %></p></td>
      <td><%= link_to "Update #{shelter.name}", "/shelters/#{shelter.id}/edit" %></td>
      <td class='delete-link'><%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %></td>
    </tr>
<% end %>
</table>


